@{
    Layout = null;
    ViewData["Title"] = "Login";
}

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>HumanAid - Login</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
        <style>
            .bg-image-blur {
                filter: blur(2px);
                -webkit-filter: blur(2px);
            }
        </style>
    </head>
    <body class="bg-light">
        <div class="container-fluid p-0">
            <div class="row g-0">
                <!-- Lado izquierdo - Imagen y mensaje -->
                <div class="col-lg-6 d-none d-lg-block position-relative overflow-hidden">
                    <!-- Imagen de fondo -->
                    <img src="https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                         class="img-fluid h-100 w-100 bg-image-blur" style="object-fit: cover;" alt="Ayuda humanitaria">

                    <!-- Overlay negro con 50% de opacidad -->
                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-black" style="opacity: 0.5; z-index: 1;"></div>

                    <!-- Contenido sobre la imagen -->
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-center align-items-center text-white p-5" style="z-index: 2;">
                        <div class="text-center mb-5" style="max-width: 500px;">
                            <h1 class="display-5 fw-bold mb-4">Transformando Vidas, Construyendo Esperanza</h1>
                            <p class="lead fw-bold">Cada acción cuenta. Juntos podemos crear un impacto duradero en las comunidades más vulnerables del mundo.</p>
                        </div>
                        <div class="row justify-content-center w-100" style="max-width: 600px;">
                            <div class="col-md-4 mb-3">
                                <div class="rounded p-3 text-center">
                                    <h2 class="fw-bold mb-0">120+</h2>
                                    <p class="text-uppercase small mb-0">Países</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="rounded p-3 text-center">
                                    <h2 class="fw-bold mb-0">5M+</h2>
                                    <p class="text-uppercase small mb-0 fw-bold">Personas Ayudadas</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="rounded p-3 text-center">
                                    <h2 class="fw-bold mb-0">10K+</h2>
                                    <p class="text-uppercase small mb-0">Voluntarios</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lado derecho - Formulario de login -->
                <div class="col-lg-6 bg-white">
                    <div class="d-flex justify-content-center align-items-center min-vh-100 p-4">
                        <div class="w-100" style="max-width: 450px;">
                            <!-- Logo y título -->
                            <div class="text-center mb-4">
                                <div class="d-inline-flex align-items-center mb-3">
                                    <div class="bg-success rounded-circle p-3 me-2 text-white">
                                        <i class="fas fa-hands-helping fa-2x"></i>
                                    </div>
                                    <div class="text-start">
                                        <h1 class="h3 mb-0 fw-bold text-dark">HumanAid</h1>
                                        <p class="text-muted small mb-0">Ayuda Humanitaria Global</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Texto de bienvenida -->
                            <div class="text-center mb-4">
                                <h2 class="h4 fw-bold text-dark">¡Bienvenido de nuevo!</h2>
                                <p class="text-muted">Inicia sesión para continuar con tu labor humanitaria.</p>
                            </div>

                            <!-- Formulario -->
                            <form method="post" action="/Account/Login">
                                @if (ViewBag.Mensaje != null)
                                {
                                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                        <div>@ViewBag.Mensaje</div>
                                    </div>
                                }

                                <!-- Email input -->
                                <div class="mb-3">
                                    <label for="Correo" class="form-label">Correo electrónico</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light text-muted">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        <input type="email" class="form-control" id="Correo" name="Correo" placeholder="nombre@ejemplo.com" required>
                                    </div>
                                </div>

                                <!-- Password input -->
                                <div class="mb-3">
                                    <label for="Contraseña" class="form-label">Contraseña</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light text-muted">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                        <input type="password" class="form-control" id="Contraseña" name="Contraseña" placeholder="Tu contraseña" required>
                                    </div>
                                </div>

                                <!-- Remember me / Forgot password -->
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked>
                                        <label class="form-check-label" for="form1Example3">Recordarme</label>
                                    </div>
                                    <a href="#" class="text-primary small">¿Olvidaste tu contraseña?</a>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-success w-100 py-2 mb-4 fw-bold">
                                    Iniciar sesión
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>