@model HumanAid.Models.Medicamento

@{
    ViewData["Title"] = "Details";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold">Detalles del Medicamento</h1>
                    <p class="text-muted">Información completa sobre la donación de medicamentos #@Model.MedicamentoId</p>
                </div>
                <div class="d-flex">
                    <a asp-action="Edit" asp-route-id="@Model?.MedicamentoId" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square me-2"></i>Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.MedicamentoId" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-2"></i>Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Main Details Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-capsule me-2"></i>Información del Medicamento
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- Nombre del Medicamento -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-prescription2 text-primary fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Nombre)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Dosis -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Dosis)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-droplet-half text-info fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">
                                        @Html.DisplayFor(model => model.Dosis)
                                    </h4>
                                </div>
                            </div>
                        </div>

                        <!-- Cantidad -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.cantidad)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-box-seam text-success fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">
                                        @Html.DisplayFor(model => model.cantidad) unidades
                                    </h4>
                                </div>
                            </div>
                        </div>

                        <!-- Destino del Envío -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Envio)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-truck text-warning fs-3 me-3"></i>
                                    <div>
                                        <h4 class="fw-bold mb-1">@Html.DisplayFor(model => model.Envio.Destino)</h4>
                                        <p class="text-muted mb-0">Código de envío: #@(1000 + Model.EnvioId)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="alert alert-info mt-3">
                        <div class="d-flex">
                            <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                            <div>
                                <h6 class="alert-heading">Información importante</h6>
                                <p class="mb-0">Este medicamento debe ser administrado bajo supervisión médica. Mantener fuera del alcance de los niños.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-printer me-2"></i>Imprimir Detalles
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Estado de la Donación
                    </h5>

                    <div class="d-flex align-items-center mb-3 mt-4">
                        <div class="bg-primary rounded-circle p-2 me-3">
                            <i class="bi bi-calendar-check text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Fecha de registro</div>
                            <div class="fw-medium">@DateTime.Now.AddDays(-5).ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info rounded-circle p-2 me-3">
                            <i class="bi bi-person text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Registrado por</div>
                            <div class="fw-medium">Donadores Externos</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning rounded-circle p-2 me-3">
                            <i class="bi bi-clock-history text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Fecha de caducidad</div>
                            <div class="fw-medium">@DateTime.Now.AddYears(2).ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="bg-success rounded-circle p-2 me-3">
                            <i class="bi bi-check-circle text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Estado</div>
                            <div class="fw-medium">
                                <span class="badge bg-success">Verificado</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
