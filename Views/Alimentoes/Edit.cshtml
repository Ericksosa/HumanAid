@model HumanAid.Models.Alimento

@{
    ViewData["Title"] = "Edit";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Editar Donación de Alimentos</h1>
            <p class="text-muted">Modifique la información de la donación de alimentos</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Modificar Información del Alimento #@Model.AlimentoId
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="AlimentoId" />

                        <div class="mb-4">
                            <label asp-for="EnvioId" class="form-label fw-medium">
                                <i class="bi bi-truck me-2"></i>Destino del Envío
                            </label>
                            <select asp-for="EnvioId" class="form-select form-select-lg" asp-items="ViewBag.EnvioId"></select>
                            <span asp-validation-for="EnvioId" class="text-danger"></span>
                            <div class="form-text">Seleccione el destino al que se enviará esta donación</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Tipo" class="form-label fw-medium">
                                <i class="bi bi-tag me-2"></i>Tipo de Alimento
                            </label>
                            <input asp-for="Tipo" class="form-control form-control-lg" placeholder="Ej: Arroz, Frijoles, Pasta..." />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                            <div class="form-text">Especifique el tipo de alimento que está donando</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Peso" class="form-label fw-medium">
                                <i class="bi bi-speedometer2 me-2"></i>Peso (kg)
                            </label>
                            <div class="input-group input-group-lg">
                                <input asp-for="Peso" class="form-control" placeholder="0.00" type="number" step="0.01" min="0" />
                                <span class="input-group-text">kg</span>
                            </div>
                            <span asp-validation-for="Peso" class="text-danger"></span>
                            <div class="form-text">Indique el peso en kilogramos</div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.AlimentoId" class="btn btn-outline-primary me-2">
                                    <i class="bi bi-info-circle me-2"></i>Ver Detalles
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-save me-2"></i>Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Estado de la Donación
                    </h5>
                    <p class="card-text">Está editando la información de una donación existente. Los cambios se aplicarán una vez guardados.</p>

                    <div class="d-flex align-items-center mb-3 mt-4">
                        <div class="bg-success rounded-circle p-2 me-3">
                            <i class="bi bi-calendar-check text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Fecha de registro</div>
                            <div class="fw-medium">@DateTime.Now.AddDays(-5).ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary rounded-circle p-2 me-3">
                            <i class="bi bi-person text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Registrado por</div>
                            <div class="fw-medium">Donador Externo</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="bg-warning rounded-circle p-2 me-3">
                            <i class="bi bi-clock-history text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Última modificación</div>
                            <div class="fw-medium">@DateTime.Now.AddDays(-2).ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
