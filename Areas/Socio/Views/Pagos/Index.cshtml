@model IEnumerable<Pago>

@{
    ViewData["Title"] = "Gestión de Pagos";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Gestión de Pagos</h1>
    <p class="text-muted mb-4">Administra los pagos registrados en el sistema</p>

    <div class="row mb-4">
        <div class="col-md-12 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i> Nuevo Pago
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Socio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoCuota)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MontoCuota)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CantidadCuotas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaPago)
                    </th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Socio.Nombre)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.TipoCuota.Nombre)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.MontoCuota)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CantidadCuotas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaPago)
                        </td>
                        <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>