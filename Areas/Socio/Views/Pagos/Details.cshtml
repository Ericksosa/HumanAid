@model Pago

@{
    ViewData["Title"] = "Detalles de Pago";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Detalles del Pago</h1>
    <p class="text-muted mb-4">Información completa sobre el pago #@Model.Id</p>

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-4">
                <h4>Información del Pago</h4>
                <hr />

                <div class="bg-light p-4 rounded mb-4">
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Socio:</div>
                        <div class="col-md-9">@Html.DisplayFor(model => model.Socio.Nombre)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Tipo de Cuota:</div>
                        <div class="col-md-9">
                            <span class="badge bg-info">@Html.DisplayFor(model => model.TipoCuota.Nombre)</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Monto de Cuota:</div>
                        <div class="col-md-9">@Html.DisplayFor(model => model.MontoCuota)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Cantidad de Cuotas:</div>
                        <div class="col-md-9">@Html.DisplayFor(model => model.CantidadCuotas)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Fecha de Pago:</div>
                        <div class="col-md-9">@Html.DisplayFor(model => model.FechaPago)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Monto Total:</div>
                        <div class="col-md-9">
                            <span class="badge bg-success">@(Model.MontoCuota * Model.CantidadCuotas)</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">ID:</div>
                        <div class="col-md-9"><code>@Model.Id</code></div>
                    </div>
                </div>

                <div class="d-flex">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="bg-light p-4 rounded mb-4">
                <h4>Resumen del Pago</h4>
                <hr />
                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-success me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Socio</span>
                    </div>
                    <p class="ms-4 mb-0">@Html.DisplayFor(model => model.Socio.Nombre)</p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-primary me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Tipo de Cuota</span>
                    </div>
                    <p class="ms-4 mb-0">
                        <span class="badge bg-info">@Html.DisplayFor(model => model.TipoCuota.Nombre)</span>
                    </p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-info me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Monto Total</span>
                    </div>
                    <p class="ms-4 mb-0">@(Model.MontoCuota * Model.CantidadCuotas)</p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-warning me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Fecha de Pago</span>
                    </div>
                    <p class="ms-4 mb-0">@Html.DisplayFor(model => model.FechaPago)</p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-secondary me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Estado</span>
                    </div>
                    <p class="ms-4 mb-0"><span class="badge bg-success">Pagado</span></p>
                </div>
            </div>
        </div>
    </div>
</div>