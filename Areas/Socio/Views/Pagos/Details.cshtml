@model Pago

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del Pago</h1>

<hr />
<dl class="row">
    <dt class="col-sm-3">
        Socio:
    </dt>
    <dd class="col-sm-9">
        @Model.Socio?.Nombre
    </dd>
    <dt class="col-sm-3">
        Tipo de Cuota:
    </dt>
    <dd class="col-sm-9">
        @($"{Model.TipoCuota?.Nombre} la cual tiene un monto de: ${Model.MontoCuota}")
    </dd>
    <dt class="col-sm-3">
        Monto Cuota:
    </dt>
    <dd class="col-sm-9">
        @Model.MontoCuota
    </dd>
    <dt class="col-sm-3">
        Cantidad de Cuotas:
    </dt>
    <dd class="col-sm-9">
        @Model.CantidadCuotas
    </dd>
    <dt class="col-sm-3">
        Fecha de Pago:
    </dt>
    <dd class="col-sm-9">
        @Model.FechaPago.ToString("dd/MM/yyyy")
    </dd>
</dl>
<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
