@model Pago

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Pago</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Socio:
        </dt>
        <dd class="col-sm-9">
            @Model.Socio?.Nombre
        </dd>
        <dt class="col-sm-3">
            Tipo de Cuota:
        </dt>
        <dd class="col-sm-9">
            @($"{Model.TipoCuota?.Nombre} la cual tiene un monto de: ${Model.MontoCuota}")
        </dd>
        <dt class="col-sm-3">
            Monto Cuota:
        </dt>
        <dd class="col-sm-9">
            @Model.MontoCuota
        </dd>
        <dt class="col-sm-3">
            Cantidad de Cuotas:
        </dt>
        <dd class="col-sm-9">
            @Model.CantidadCuotas
        </dd>
        <dt class="col-sm-3">
            Fecha de Pago:
        </dt>
        <dd class="col-sm-9">
            @Model.FechaPago.ToString("dd/MM/yyyy")
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
