@model HumanAid.Models.TipoCuota

@{
    ViewData["Title"] = "Eliminar Cuota";
}

<div class="container mb-5">
    <!-- Header -->
    <div class="row mb-4 text-center">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-danger">Eliminar Cuota</h1>
            <p class="text-muted">Está a punto de eliminar permanentemente esta cuota</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <!-- Advertencia -->
            <div class="alert alert-warning d-flex align-items-start">
                <i class="bi bi-exclamation-triangle-fill fs-4 me-3 mt-1 text-danger"></i>
                <div>
                    <h5 class="alert-heading">¿Está seguro de que desea eliminar esta cuota?</h5>
                    <p class="mb-0">Esta acción no se puede deshacer. Toda la información relacionada se eliminará permanentemente.</p>
                </div>
            </div>

            <!-- Información de la cuota -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">Detalles de la Cuota</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex">
                                <i class="bi bi-fonts fs-4 text-primary me-3"></i>
                                <div>
                                    <div class="text-muted small">Nombre</div>
                                    <div class="fw-bold fs-5">@Model.Nombre</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex">
                                <i class="bi bi-cash-stack fs-4 text-success me-3"></i>
                                <div>
                                    <div class="text-muted small">Importe</div>
                                    <div class="fw-bold fs-5">@Model.Importe</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex">
                                <i class="bi bi-card-text fs-4 text-warning me-3"></i>
                                <div>
                                    <div class="text-muted small">Descripción</div>
                                    <div class="fw-bold fs-5">@Model.Descripcion</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <form asp-action="Delete" asp-route-id="@Model.TipoCuotaId" method="post" onsubmit="return confirmacionEliminar();">
                        <input type="hidden" asp-for="TipoCuotaId" />
                        <hr class="my-4">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.TipoCuotaId" class="btn btn-warning btn-lg">
                                    <i class="bi bi-pencil me-2"></i>Editar
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="bi bi-trash me-2"></i>Eliminar Permanentemente
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Información adicional -->
        <div class="col-lg-4 order-lg-2">
            <div class="card border-0 bg-light shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <ul class="list-group list-group-flush bg-transparent">
                        <li class="list-group-item bg-transparent border-0 ps-0 d-flex align-items-center">
                            <i class="bi bi-dash-circle text-danger me-2"></i> Se eliminarán todos los registros asociados
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0 d-flex align-items-center">
                            <i class="bi bi-dash-circle text-danger me-2"></i> Esta acción no se puede deshacer
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0 d-flex align-items-center">
                            <i class="bi bi-dash-circle text-danger me-2"></i> Puede afectar informes y estadísticas
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
