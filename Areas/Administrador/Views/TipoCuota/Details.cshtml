@model HumanAid.Models.TipoCuota

@{
    ViewData["Title"] = "Detalles de Cuota";
}

<div class="container mb-5">
    <!-- Header -->
    <div class="row mb-4 text-center">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Detalles de Cuota</h1>
            <p class="text-muted">Información detallada de la cuota registrada</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8 mx-auto">
            <!-- Card de detalles -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">Información de la Cuota</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex">
                                <i class="bi bi-fonts fs-4 text-primary me-3"></i>
                                <div>
                                    <div class="text-muted small">Nombre</div>
                                    <div class="fw-bold fs-5">@Model.Nombre</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex">
                                <i class="bi bi-cash-stack fs-4 text-success me-3"></i>
                                <div>
                                    <div class="text-muted small">Importe</div>
                                    <div class="fw-bold fs-5">@Model.Importe</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex">
                                <i class="bi bi-card-text fs-4 text-warning me-3"></i>
                                <div>
                                    <div class="text-muted small">Descripción</div>
                                    <div class="fw-bold fs-5">@Model.Descripcion</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <hr class="my-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.TipoCuotaId" class="btn btn-warning">
                                <i class="bi bi-pencil me-2"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.TipoCuotaId" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
