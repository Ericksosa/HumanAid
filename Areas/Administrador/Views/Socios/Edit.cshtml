@model HumanAid.Models.Socio

@{
    ViewData["Title"] = "Editar Socio";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Editar Socio</h1>
    <p class="text-muted mb-4">Modifique la información del socio</p>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-4">
                <h4>Modificar Información del Socio #@Model.SocioId</h4>
                <hr />
                <form asp-action="Edit" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="SocioId" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre Completo</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                            <input asp-for="FechaNacimiento" class="form-control" type="date" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CuentaBancaria" class="form-label">Cuenta Bancaria</label>
                            <input asp-for="CuentaBancaria" class="form-control" placeholder="Ingrese el número de cuenta" />
                            <span asp-validation-for="CuentaBancaria" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaPago" class="form-label">Fecha de Pago</label>
                            <input asp-for="FechaPago" class="form-control" type="date" />
                            <span asp-validation-for="FechaPago" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TipoCuotaId" class="form-label">Tipo de Cuota</label>
                            <select asp-for="TipoCuotaId" class="form-select" asp-items="ViewBag.TipoCuotaId"></select>
                            <span asp-validation-for="TipoCuotaId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="SedeId" class="form-label">Sede</label>
                            <select asp-for="SedeId" class="form-select" asp-items="ViewBag.SedeId"></select>
                            <span asp-validation-for="SedeId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="UsuarioId" class="form-label">Usuario Asociado</label>
                            <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId"></select>
                            <span asp-validation-for="UsuarioId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaRegistro" class="form-label">Fecha de Registro</label>
                            <input asp-for="FechaRegistro" class="form-control" type="datetime-local" />
                            <span asp-validation-for="FechaRegistro" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">Volver al Listado</a>
                        <a asp-action="Details" asp-route-id="@Model.SocioId" class="btn btn-outline-primary me-2">Ver Detalles</a>
                        <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-4">
            <div class="bg-light p-4 rounded">
                <h4>Estado del Socio</h4>
                <hr />
                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-success me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Fecha de registro</span>
                    </div>
                    <p class="ms-4 mb-0">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-primary me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Usuario asociado</span>
                    </div>
                    <p class="ms-4 mb-0">@Model.Usuario.Correo</p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-info me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Tipo de cuota</span>
                    </div>
                    <p class="ms-4 mb-0">@Model.TipoCuota.Nombre</p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-warning me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Próximo pago</span>
                    </div>
                    <p class="ms-4 mb-0">@Model.FechaPago.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}