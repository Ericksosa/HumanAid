@model HumanAid.Models.Socio

@{
    ViewData["Title"] = "Detalles de Socio";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Detalles del Socio</h1>
    <p class="text-muted mb-4">Información completa sobre el socio #@Model.SocioId</p>

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model.SocioId" class="btn btn-warning me-2">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.SocioId" class="btn btn-danger">Eliminar</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-4">
                <h4>Información del Socio</h4>
                <hr />

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="bg-light p-3 rounded h-100">
                            <h5 class="mb-3">Datos Personales</h5>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Nombre:</div>
                                <div class="col-md-8">@Html.DisplayFor(model => model.Nombre)</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Fecha de Nacimiento:</div>
                                <div class="col-md-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Cuenta Bancaria:</div>
                                <div class="col-md-8">@Html.DisplayFor(model => model.CuentaBancaria)</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Fecha de Pago:</div>
                                <div class="col-md-8">@Model.FechaPago.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="bg-light p-3 rounded h-100">
                            <h5 class="mb-3">Información de Afiliación</h5>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Tipo de Cuota:</div>
                                <div class="col-md-8">
                                    <span class="badge bg-info">
                                        @Html.DisplayFor(model => model.TipoCuota.Nombre)
                                    </span>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Sede:</div>
                                <div class="col-md-8">@Html.DisplayFor(model => model.Sede.Nombre)</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Usuario:</div>
                                <div class="col-md-8">@Html.DisplayFor(model => model.Usuario.Correo)</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Fecha de Registro:</div>
                                <div class="col-md-8">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="bg-light p-4 rounded mb-4">
                <h4>Estado del Socio</h4>
                <hr />
                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-success me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Fecha de registro</span>
                    </div>
                    <p class="ms-4 mb-0">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-primary me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Usuario asociado</span>
                    </div>
                    <p class="ms-4 mb-0">@Model.Usuario.Correo</p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-info me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Tipo de cuota</span>
                    </div>
                    <p class="ms-4 mb-0">@Model.TipoCuota.Nombre</p>
                </div>
        </div>
    </div>
</div>