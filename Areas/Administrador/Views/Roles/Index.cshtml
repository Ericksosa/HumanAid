@model IEnumerable<HumanAid.Models.Rol>

@{
    ViewData["Title"] = "Gestión de Roles";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Gestión de Roles</h1>
    <p class="text-muted mb-4">Administra los roles del sistema</p>

    <div class="row mb-4">
        <div class="col-md-6 mb-2 mb-md-0">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i> Nuevo Rol
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Fecha de Registro</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            <span class="d-inline-block text-truncate" style="max-width: 400px;" title="@item.Descripcion">
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </span>
                        </td>
                        <td>@item.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.RolId" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.RolId" class="btn btn-primary btn-sm">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.RolId" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
