@model HumanAid.Models.Rol

@{
    ViewData["Title"] = "Editar Rol";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Editar Rol</h1>
    <p class="text-muted mb-4">Modifique la información del rol</p>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-4">
                <h4>Modificar Información del Rol #@Model.RolId</h4>
                <hr />
                <form asp-action="Edit" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="RolId" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre del Rol</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del rol" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaRegistro" class="form-label">Fecha de Registro</label>
                            <input asp-for="FechaRegistro" class="form-control" type="datetime-local" />
                            <span asp-validation-for="FechaRegistro" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese una descripción detallada del rol"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">Volver al Listado</a>
                        <a asp-action="Details" asp-route-id="@Model.RolId" class="btn btn-outline-primary me-2">Ver Detalles</a>
                        <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}