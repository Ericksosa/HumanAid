@model HumanAid.Models.Rol

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Rol</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>

    <h5>Permisos Asociados:</h5>
    @if (Model.RolPermisos != null && Model.RolPermisos.Any())
    {
        <ul>
            @foreach (var permiso in Model.RolPermisos)
            {
                <li>@permiso.Permiso.Nombre</li>
            }
        </ul>
    }
    else
    {
        <p>No hay permisos asociados a este rol.</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.RolId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
