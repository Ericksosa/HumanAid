@model HumanAid.Models.Voluntario

@{
    ViewData["Title"] = "Details";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold">Detalles del Voluntario</h1>
                    <p class="text-muted">Información completa sobre el voluntario #@Model.VoluntarioId</p>
                </div>
                <div class="d-flex">
                    <a asp-action="Edit" asp-route-id="@Model?.VoluntarioId" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square me-2"></i>Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.VoluntarioId" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-2"></i>Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Main Details Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person me-2"></i>Información del Voluntario
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- Nombre -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-fill text-primary fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Nombre)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Dirección -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Direccion)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-geo-alt-fill text-success fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Direccion)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Fecha de Nacimiento -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar-fill text-warning fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.FechaNacimiento)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Sede -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Sede)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-building text-info fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Sede.Nombre)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Fecha de Registro -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.FechaRegistro)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar-check-fill text-success fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.FechaRegistro)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Email)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-envelope-fill text-primary fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Email)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Teléfono -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-telephone-fill text-warning fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Telefono)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Usuario -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Usuario)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-badge-fill text-info fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Usuario.Correo)</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Estado del Voluntario
                    </h5>

                    <div class="d-flex align-items-center mb-3 mt-4">
                        <div class="bg-success rounded-circle p-2 me-3">
                            <i class="bi bi-calendar-check text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Fecha de registro</div>
                            <div class="fw-medium">@DateTime.Now.AddDays(-5).ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary rounded-circle p-2 me-3">
                            <i class="bi bi-person text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Registrado por</div>
                            <div class="fw-medium">Administrador</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning rounded-circle p-2 me-3">
                            <i class="bi bi-clock-history text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Última modificación</div>
                            <div class="fw-medium">@DateTime.Now.AddDays(-2).ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="bg-info rounded-circle p-2 me-3">
                            <i class="bi bi-check-circle text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Estado</div>
                            <div class="fw-medium">
                                <span class="badge bg-success">Activo</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
