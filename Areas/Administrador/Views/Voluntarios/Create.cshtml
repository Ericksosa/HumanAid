@model HumanAid.Models.Voluntario

@{
    ViewData["Title"] = "Crear Voluntario";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Nuevo Voluntario</h1>
            <p class="text-muted">Complete el formulario para registrar un nuevo voluntario</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">Información del Voluntario</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-medium">Nombre</label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Direccion" class="form-label fw-medium">Dirección</label>
                            <input asp-for="Direccion" class="form-control form-control-lg" placeholder="Dirección completa" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FechaNacimiento" class="form-label fw-medium">Fecha de Nacimiento</label>
                            <input asp-for="FechaNacimiento" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SedeId" class="form-label fw-medium">Sede</label>
                            <select asp-for="SedeId" class="form-select form-select-lg" asp-items="ViewBag.SedeId">
                                <option value="" selected disabled>-- Seleccione una sede --</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FechaRegistro" class="form-label fw-medium">Fecha de Registro</label>
                            <input asp-for="FechaRegistro" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-medium">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="Correo electrónico" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Telefono" class="form-label fw-medium">Teléfono</label>
                            <input asp-for="Telefono" class="form-control form-control-lg" placeholder="Número de teléfono" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UsuarioId" class="form-label fw-medium">Usuario</label>
                            <select asp-for="UsuarioId" class="form-select form-select-lg" asp-items="ViewBag.UsuarioId">
                                <option value="" selected disabled>-- Seleccione un usuario --</option>
                            </select>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
                            <button type="submit" class="btn btn-success btn-lg px-4">Guardar Voluntario</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">Información Importante</h5>
                    <p class="card-text">Asegúrese de que toda la información proporcionada sea correcta y esté actualizada.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">Complete todos los campos obligatorios</li>
                        <li class="list-group-item bg-transparent border-0 ps-0">Verifique la dirección y el correo electrónico</li>
                        <li class="list-group-item bg-transparent border-0 ps-0">Asegúrese de que el número de teléfono sea válido</li>
                    </ul>
                    <p class="card-text">Para más información sobre el registro de voluntarios, contacte con nuestro equipo.</p>
                    <a href="#" class="btn btn-outline-success">Ayuda con el Registro</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

