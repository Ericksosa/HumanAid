<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HumanAid</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HumanAid.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @if (TempData["success"] != null)
    {
        <meta name="sweet-alert-success" content="@TempData["success"]">
    }
    @if (TempData["danger"] != null)
    {
        <meta name="sweet-alert-error" content="@TempData["danger"]">
    }
    @if (TempData["warning"] != null)
    {
        <meta name="sweet-alert-warning" content="@TempData["warning"]">
    }
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <meta name="sweet-alert-errors" content="@string.Join(", ", ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage))">
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Administrador" asp-controller="Home" asp-action="Index">HumanAid</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrador" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="voluntariosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Voluntarios
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="voluntariosDropdown">
                                <li><a class="dropdown-item" asp-area="Administrador" asp-controller="Voluntarios" asp-action="Index">Voluntarios</a></li>
                                <li><a class="dropdown-item" asp-area="Administrador" asp-controller="VoluntarioAdministrativoes" asp-action="Index">Voluntarios Administrativos</a></li>
                                <li><a class="dropdown-item" asp-area="Administrador" asp-controller="VoluntarioSanitarios" asp-action="Index">Voluntarios Sanitarios</a></li>
                                <li><a class="dropdown-item" asp-area="Administrador" asp-controller="Labores" asp-action="Index">Asignar Labores a Voluntarios</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrador" asp-controller="Sedes" asp-action="Index">Sedes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrador" asp-controller="Envio" asp-action="Index">Envíos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrador" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrador" asp-controller="Socios" asp-action="Index">Socios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrador" asp-controller="AyudaHumanitaria" asp-action="Index">Ayuda Humanitaria</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="verMasDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Ver más
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="verMasDropdown">
                                <li><a class="dropdown-item" asp-area="Administrador" asp-controller="TipoCuota" asp-action="Index">Cuotas</a></li>
                                <li><a class="dropdown-item" asp-area="Administrador" asp-controller="Gastos" asp-action="Index">Gastos</a></li>
                                <li><a class="dropdown-item" asp-area="Administrador" asp-controller="Roles" asp-action="Index">Gestión de Roles</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HumanAid - <a asp-area="Administrador" asp-controller="Home" asp-action="Privacy">Admin</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sweetalert.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>