@model IEnumerable<HumanAid.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Gestión de Usuarios</h1>
    <p class="text-muted mb-4">Administra los usuarios registrados en el sistema</p>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Nuevo Usuario
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-5">
                    <label for="searchCorreo" class="form-label">Buscar por correo:</label>
                    <input type="text" name="searchCorreo" id="searchCorreo" class="form-control" placeholder="Ingrese parte del correo">
                </div>
                <div class="col-md-5">
                    <label for="RolId" class="form-label">Filtrar por rol:</label>
                    <select id="RolId" name="RolId" class="form-select">
                        <option value="">Todos los roles</option>
                        @foreach (var rol in ViewBag.Roles as IEnumerable<HumanAid.Models.Rol>)
                        {
                            <option value="@rol.RolId">@rol.Nombre</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-1"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Correo)</th>
                    <th>@Html.DisplayNameFor(model => model.Clave)</th>
                    <th>@Html.DisplayNameFor(model => model.Rol)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Clave)</td>
                        <td>@Html.DisplayFor(modelItem => item.Rol.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                        <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-primary btn-sm">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
