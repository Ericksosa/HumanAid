@model IEnumerable<HumanAid.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="form-group">
        <label for="searchCorreo">Buscar por correo:</label>
        <input type="text" name="searchCorreo" id="searchCorreo" class="form-control" placeholder="Ingrese parte del correo">
    </div>
    <div class="form-group">
        <label for="RolId">Filtrar por rol:</label>
        <select id="RolId" name="RolId" class="form-control">
            <option value="">Todos los roles</option>
            @foreach (var rol in ViewBag.Roles as IEnumerable<HumanAid.Models.Rol>)
            {
                <option value="@rol.RolId">@rol.Nombre</option>
            }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UsuarioId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UsuarioId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UsuarioId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
