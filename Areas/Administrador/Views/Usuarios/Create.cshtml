@model HumanAid.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Crear Usuario</h1>
    <p class="text-muted mb-4">Complete el formulario para registrar un nuevo usuario</p>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-4">
                <h4>Información del Usuario</h4>
                <hr />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Correo" class="control-label">Correo Electrónico</label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Clave" class="control-label">Contraseña</label>
                        <input asp-for="Clave" class="form-control" />
                        <span asp-validation-for="Clave" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RolId" class="control-label">Rol</label>
                        <select asp-for="RolId" class="form-select" asp-items="ViewBag.RolId"></select>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FechaRegistro" class="control-label">Fecha de Registro</label>
                        <input asp-for="FechaRegistro" class="form-control" type="date" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>

                    <hr class="my-4">

                    <div class="form-group d-flex">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">Volver al Listado</a>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-4">
            <div class="bg-light p-4 rounded">
                <h4>Información Importante</h4>
                <hr />
                <ul class="mb-0">
                    <li class="mb-2">El correo electrónico debe ser único en el sistema</li>
                    <li class="mb-2">La contraseña debe ser segura y cumplir con los requisitos de seguridad</li>
                    <li class="mb-2">Seleccione el rol adecuado según las funciones que desempeñará el usuario</li>
                    <li class="mb-2">La fecha de registro se establece automáticamente si no se especifica</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}