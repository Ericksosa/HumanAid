@model HumanAid.Models.Usuario

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Detalles del Usuario</h1>
    <p class="text-muted mb-4">Información completa sobre el usuario #@Model.UsuarioId</p>

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model.UsuarioId" class="btn btn-warning me-2">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.UsuarioId" class="btn btn-danger">Eliminar</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-4">
                <h4>Información del Usuario</h4>
                <hr />

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="bg-light p-3 rounded h-100">
                            <h5 class="mb-3">Datos Personales</h5>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Correo:</div>
                                <div class="col-md-8">@Html.DisplayFor(model => model.Correo)</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Contraseña:</div>
                                <div class="col-md-8">@Html.DisplayFor(model => model.Clave)</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-4 fw-bold">Rol:</div>
                                <div class="col-md-8">
                                    <span class="badge rounded-pill
                                        @(Model.Rol.Nombre == "Administrador" ? "bg-danger" :
                                          Model.Rol.Nombre == "VoluntarioSanitario" ? "bg-success" : "bg-info")">
                                        @Html.DisplayFor(model => model.Rol.Nombre)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="bg-light p-3 rounded h-100">
                            <h5 class="mb-3">Información del Sistema</h5>

                            <div class="row mb-2">
                                <div class="col-md-5 fw-bold">ID:</div>
                                <div class="col-md-7"><code>@Model.UsuarioId</code></div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-5 fw-bold">Fecha de Registro:</div>
                                <div class="col-md-7">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="bg-light p-4 rounded">
                <h4>Información adicional</h4>
                <hr />
                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-success me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Fecha de registro</span>
                    </div>
                    <p class="ms-4 mb-0">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</p>
                </div>

                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle bg-primary me-2" style="width: 12px; height: 12px;"></div>
                        <span class="fw-bold">Registrado por</span>
                    </div>
                    <p class="ms-4 mb-0">Administrador</p>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>