@model HumanAid.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container-fluid py-4">
    <h1 class="mb-1">Editar Usuario</h1>
    <p class="text-muted mb-4">Modifique la información del usuario</p>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-4">
                <h4>Modificar Información del Usuario #@Model.UsuarioId</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UsuarioId" />

                    <div class="form-group mb-3">
                        <label asp-for="Correo" class="control-label">Correo Electrónico</label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Clave" class="control-label">Contraseña</label>
                        <input asp-for="Clave" class="form-control" />
                        <span asp-validation-for="Clave" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RolId" class="control-label">Rol</label>
                        <select asp-for="RolId" class="form-select" asp-items="ViewBag.RolId"></select>
                        <span asp-validation-for="RolId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FechaRegistro" class="control-label">Fecha de Registro</label>
                        <input asp-for="FechaRegistro" class="form-control" type="date" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>

                    <hr class="my-4">

                    <div class="form-group d-flex">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">Volver al Listado</a>
                        <a asp-action="Details" asp-route-id="@Model.UsuarioId" class="btn btn-outline-primary me-2">Ver Detalles</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}