@model HumanAid.Models.Envio

@{
    ViewData["Title"] = "Editar Envío";
}

<div class="container mb-5">
    <!-- Header -->
    <div class="row mb-4 text-center">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Editar Envío</h1>
            <p class="text-muted">Modifica los detalles de tu envío</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Información Importante a la derecha -->
        <div class="col-lg-4 order-lg-2">
            <div class="card border border-secondary bg-light rounded shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text small text-muted">Revise con cuidado la información antes de modificar el envío.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0 d-flex align-items-center py-2">
                            <span class="badge bg-success me-2"><i class="bi bi-check-circle-fill"></i></span> Fechas correctas
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0 d-flex align-items-center py-2">
                            <span class="badge bg-success me-2"><i class="bi bi-check-circle-fill"></i></span> Sede organizadora verificada
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0 d-flex align-items-center py-2">
                            <span class="badge bg-success me-2"><i class="bi bi-check-circle-fill"></i></span> Estado del envío correcto
                        </li>
                    </ul>
                    <a href="#" class="btn btn-outline-success btn-block btn-lg">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Envíos
                    </a>
                </div>
            </div>
        </div>

        <!-- Formulario de edición -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-truck me-2"></i>Información del Envío
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="EnvioId" />

                        <div class="mb-4">
                            <label asp-for="CodigoEnvio" class="form-label fw-medium">
                                <i class="bi bi-upc-scan me-2"></i>Código de Envío
                            </label>
                            <input asp-for="CodigoEnvio" class="form-control form-control-lg" placeholder="Ej: ENV12345" />
                            <span asp-validation-for="CodigoEnvio" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Fecha" class="form-label fw-medium">
                                <i class="bi bi-calendar-event me-2"></i>Fecha de Registro
                            </label>
                            <input asp-for="Fecha" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Destino" class="form-label fw-medium">
                                <i class="bi bi-geo-alt me-2"></i>Destino
                            </label>
                            <input asp-for="Destino" class="form-control form-control-lg" placeholder="Lugar de destino" />
                            <span asp-validation-for="Destino" class="text-danger"></span>
                        </div>

                        <hr class="my-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@Model.EnvioId" class="btn btn-primary">
                                    <i class="bi bi-info-circle me-2"></i>Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.EnvioId" class="btn btn-danger">
                                    <i class="bi bi-trash me-2"></i>Eliminar
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

