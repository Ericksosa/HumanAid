@model HumanAid.Models.Envio

@{
    ViewData["Title"] = "Crear Envío";
}

<div class="container mb-5">
    <!-- Header -->
    <div class="row mb-4 text-center">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Nuevo Envío</h1>
            <p class="text-muted">Complete el formulario para registrar un nuevo envío</p>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-truck me-2"></i>Información del Envío
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CodigoEnvio" class="form-label fw-medium">
                                <i class="bi bi-upc-scan me-2"></i>Código de Envío
                            </label>
                            <input asp-for="CodigoEnvio" class="form-control form-control-lg" placeholder="Ej: ENV12345" />
                            <span asp-validation-for="CodigoEnvio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Fecha" class="form-label fw-medium">
                                <i class="bi bi-calendar-event me-2"></i>Fecha de Registro
                            </label>
                            <input asp-for="Fecha" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Destino" class="form-label fw-medium">
                                <i class="bi bi-geo-alt me-2"></i>Destino
                            </label>
                            <input asp-for="Destino" class="form-control form-control-lg" placeholder="Lugar de destino" />
                            <span asp-validation-for="Destino" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaSalida" class="form-label fw-medium">
                                <i class="bi bi-box-arrow-up-right me-2"></i>Fecha de Salida
                            </label>
                            <input asp-for="FechaSalida" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="FechaSalida" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TipoEnvio" class="form-label fw-medium">
                                <i class="bi bi-tags me-2"></i>Tipo de Envío
                            </label>
                            <select asp-for="TipoEnvio" class="form-select form-select-lg">
                                <option value="Ayuda Material">Ayuda Material</option>
                                <option value="Humanitaria">Humanitaria</option>
                            </select>
                            <span asp-validation-for="TipoEnvio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Sedes" class="form-label fw-medium">
                                <i class="bi bi-hourglass-split me-2"></i>Sedes Organizadoras
                            </label>
                            <select id="Sedes" name="sedeIds[]" class="form-select form-select-lg">
                                @foreach (var sede in ViewBag.Sedes)
                                {
                                        <option value="@sede.SedeId">@sede.Nombre</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label fw-medium">
                                <i class="bi bi-hourglass-split me-2"></i>Estado del Envío
                            </label>
                            <select asp-for="Estado" class="form-select form-select-lg">
                                <option value="Pendiente">Pendiente</option>
                                <option value="Enviado">Enviado</option>
                                <option value="Entregado">Entregado</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <hr class="my-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Envío
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Help Sidebar -->
        <div class="col-lg-4">
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Asegúrese de que toda la información sea precisa antes de registrar el envío.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Verifique las fechas
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Seleccione solo una sede necesaria
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>Especifique correctamente el tipo y estado
                        </li>
                    </ul>
                    <a href="#" class="btn btn-outline-success">
                        <i class="bi bi-question-circle me-2"></i>Ayuda con Envíos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
