@model HumanAid.Models.Envio


@{
    ViewData["Title"] = "Create";
}

<h1>Crear Envio</h1>

<br/>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CodigoEnvio" class="control-label"></label>
                <input asp-for="CodigoEnvio" class="form-control" />
                <span asp-validation-for="CodigoEnvio" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Destino" class="control-label"></label>
                <input asp-for="Destino" class="form-control" />
                <span asp-validation-for="Destino" class="text-danger"></span>
            </div>
             <br/>
            <div class="form-group">
                <label asp-for="FechaSalida" class="control-label"></label>
                <input asp-for="FechaSalida" class="form-control" />
                <span asp-validation-for="FechaSalida" class="text-danger"></span>
            </div>
             <br/>
            <div class="form-group">
                <label asp-for="TipoEnvio" class="control-label"></label>
                <select asp-for="TipoEnvio" class="form-control">
                    <option value="Ayuda Material">Ayuda Material</option>
                    <option value="Humanitaria">Humanitaria</option>
                </select>
                <span asp-validation-for="TipoEnvio" class="text-danger"></span>
            </div>
             <br/>
             <div class="form-group">
                <label for="Sedes" class="control-label">Sedes Organizadoras</label>
                <select id="Sedes" name="sedeIds[]" class="form-control">
                    @foreach (var sede in ViewBag.Sedes)
                    {
                    <option value="@sede.SedeId">@sede.Nombre</option>
                    }
                </select>
            </div>
            <br/>
            <div class="form-group">
                <label for="Estado">Estado</label>
                <select asp-for="Estado" class="form-control">
                    <option value="Pendiente">Pendiente</option>
                    <option value="Enviado">Enviado</option>
                    <option value="Entregado">Entregado</option>
                </select>
                 <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 <br/>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
