@model HumanAid.Models.Envio

@{
    ViewData["Title"] = "Detalles del Envío";
}

<div class="container py-5">
    <!-- Título principal -->
    <div class="row mb-4 text-center">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Detalles del Envío</h1>
            <p class="text-muted">Consulta los datos completos del envío seleccionado.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- Contenido principal -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <!-- Información del Envío -->
                    <h5 class="mb-4 text-primary fw-semibold">
                        <i class="bi bi-truck me-2"></i>Información del Envío
                    </h5>

                    <div class="mb-3">
                        <label class="form-label fw-medium">
                            <i class="bi bi-upc-scan me-2"></i>Código de Envío
                        </label>
                        <input class="form-control form-control-lg bg-light" value="@Model.CodigoEnvio" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">
                            <i class="bi bi-calendar-event me-2"></i>Fecha de Registro
                        </label>
                        <input class="form-control form-control-lg bg-light" value="@Model.Fecha.ToString("yyyy-MM-dd")" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">
                            <i class="bi bi-geo-alt me-2"></i>Destino
                        </label>
                        <input class="form-control form-control-lg bg-light" value="@Model.Destino" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">
                            <i class="bi bi-box-arrow-up-right me-2"></i>Fecha de Salida
                        </label>
                        <input class="form-control form-control-lg bg-light" value="@Model.FechaSalida.ToString("yyyy-MM-dd")" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">
                            <i class="bi bi-tags me-2"></i>Tipo de Envío
                        </label>
                        <input class="form-control form-control-lg bg-light" value="@Model.TipoEnvio" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">
                            <i class="bi bi-hourglass-split me-2"></i>Estado del Envío
                        </label>
                        <input class="form-control form-control-lg bg-light" value="@Model.Estado" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-medium">
                            <i class="bi bi-building me-2"></i>Sede Organizadora
                        </label>
                        <input class="form-control form-control-lg bg-light" 
                        value="@(ViewBag.Sedes != null && ViewBag.Sedes.Count > 0 ? ViewBag.Sedes[0].Nombre : "Sin sede asignada")" readonly />
                    </div>
                    <!-- Botones de acción -->
                    <hr class="my-4" />
                    <div class="d-flex justify-content-between flex-wrap gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.EnvioId" class="btn btn-warning">
                                <i class="bi bi-pencil me-2"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.EnvioId" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel lateral informativo -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card bg-light border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                    <h5 class="card-title text-primary fw-semibold">
                        <i class="bi bi-info-circle me-2"></i>Resumen del Envío
                    </h5>
                    <p class="text-muted small">Verifique los siguientes datos importantes:</p>
                    <ul class="list-unstyled mt-3">
                        <li class="d-flex align-items-center mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i> Fechas confirmadas
                        </li>
                        <li class="d-flex align-items-center mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i> Sede organizadora verificada
                        </li>
                        <li class="d-flex align-items-center mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i> Estado del envío actualizado
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

