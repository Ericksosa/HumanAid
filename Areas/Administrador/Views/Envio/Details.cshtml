@model HumanAid.Models.Envio

@{
    ViewData["Title"] = "Detalles del Envío";
}

<div class="container mb-5">
    <!-- Header -->
    <div class="row mb-4 text-center">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Detalles del Envío</h1>
            <p class="text-muted">Aquí están los detalles del envío registrado</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Sidebar alineado a la derecha -->
        <div class="col-lg-4 order-lg-2">
            <div class="card border border-secondary bg-light rounded shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text small text-muted">Estos son los detalles del envío registrado. Revise la información con cuidado.</p>
                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0 d-flex align-items-center">
                            <span class="badge bg-success me-2"><i class="bi bi-check-circle-fill"></i></span> Fechas confirmadas
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0 d-flex align-items-center">
                            <span class="badge bg-success me-2"><i class="bi bi-check-circle-fill"></i></span> Sede organizadora verificada
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0 d-flex align-items-center">
                            <span class="badge bg-success me-2"><i class="bi bi-check-circle-fill"></i></span> Estado del envío actualizado
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Información del Envío -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-truck me-2"></i>Información del Envío
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <label class="form-label fw-medium"><i class="bi bi-upc-scan me-2"></i>Código de Envío</label>
                        <p class="border px-3 py-2 rounded bg-light">@Model.CodigoEnvio</p>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-medium"><i class="bi bi-calendar-event me-2"></i>Fecha de Registro</label>
                        <p class="border px-3 py-2 rounded bg-light">@Model.Fecha.ToString("dd/MM/yyyy")</p>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-medium"><i class="bi bi-geo-alt me-2"></i>Destino</label>
                        <p class="border px-3 py-2 rounded bg-light">@Model.Destino</p>
                    </div>

                    <hr class="my-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.EnvioId" class="btn btn-warning">
                                <i class="bi bi-pencil me-2"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.EnvioId" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

