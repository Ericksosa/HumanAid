@model HumanAid.Models.Sede

@{
    ViewData["Title"] = "Details";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold">Detalles de la Sede</h1>
                    <p class="text-muted">Información completa sobre la sede #@Model.SedeId</p>
                </div>
                <div class="d-flex">
                    <a asp-action="Edit" asp-route-id="@Model?.SedeId" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square me-2"></i>Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.SedeId" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-2"></i>Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Main Details Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-building me-2"></i>Información de la Sede
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- Nombre -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-tag-fill text-primary fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Nombre)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Ciudad -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Ciudad)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-geo-alt-fill text-success fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Ciudad)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Dirección -->
                        <div class="col-12">
                            <div class="p-4 bg-light rounded-3">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Direccion)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-map text-warning fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Direccion)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Director -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.Director)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-fill text-info fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.Director)</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Fecha de Fundación -->
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 h-100">
                                <div class="text-muted small mb-1">
                                    @Html.DisplayNameFor(model => model.FechaFundacion)
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar-event text-danger fs-3 me-3"></i>
                                    <h4 class="fw-bold mb-0">@Html.DisplayFor(model => model.FechaFundacion)</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Socios Involucrados -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-people-fill me-2"></i>Socios Involucrados
                    </h5>
                    @if (Model.Socios != null && Model.Socios.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var socio in Model.Socios)
                            {
                                <li class="list-group-item">
                                    @socio.Nombre
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No hay socios asociados a esta sede.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>