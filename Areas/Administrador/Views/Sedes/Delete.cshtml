@model HumanAid.Models.Sede

@{
    ViewData["Title"] = "Delete";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Eliminar Sede</h1>
            <p class="text-muted">Está a punto de eliminar permanentemente esta sede</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Warning Card -->
            <div class="card border-danger border-2 shadow-sm mb-4">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                        <h5 class="card-title mb-0">Confirmación de Eliminación</h5>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (TempData["danger"] != null)
                    {
                        <div class="alert alert-danger">
                            <div class="d-flex">
                                <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                                <div>
                                    <h6 class="alert-heading">@TempData["danger"]</h6>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <div class="d-flex">
                                <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                                <div>
                                    <h6 class="alert-heading">¿Está seguro de que desea eliminar esta sede?</h6>
                                    <p class="mb-0">Esta acción no se puede deshacer. Una vez eliminada, toda la información asociada a esta sede se perderá permanentemente.</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="card bg-light mt-4 mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Información de la sede a eliminar</h5>

                            <div class="row g-3">
                                <!-- Nombre de la Sede -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-building text-primary fs-4 me-3"></i>
                                        <div>
                                            <div class="text-muted small">
                                                @Html.DisplayNameFor(model => model.Nombre)
                                            </div>
                                            <div class="fw-bold fs-5">
                                                @Html.DisplayFor(model => model.Nombre)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Ciudad -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-geo-alt text-success fs-4 me-3"></i>
                                        <div>
                                            <div class="text-muted small">
                                                @Html.DisplayNameFor(model => model.Ciudad)
                                            </div>
                                            <div class="fw-bold fs-5">
                                                @Html.DisplayFor(model => model.Ciudad)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Dirección -->
                                <div class="col-12">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-map text-warning fs-4 me-3"></i>
                                        <div>
                                            <div class="text-muted small">
                                                @Html.DisplayNameFor(model => model.Direccion)
                                            </div>
                                            <div class="fw-bold fs-5">
                                                @Html.DisplayFor(model => model.Direccion)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Director -->
                                <div class="col-12">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person text-info fs-4 me-3"></i>
                                        <div>
                                            <div class="text-muted small">
                                                @Html.DisplayNameFor(model => model.Director)
                                            </div>
                                            <div class="fw-bold fs-5">
                                                @Html.DisplayFor(model => model.Director)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Fecha de Fundación -->
                                <div class="col-12">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar text-danger fs-4 me-3"></i>
                                        <div>
                                            <div class="text-muted small">
                                                @Html.DisplayNameFor(model => model.FechaFundacion)
                                            </div>
                                            <div class="fw-bold fs-5">
                                                @Html.DisplayFor(model => model.FechaFundacion)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="SedeId" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar y Volver
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('¿Está completamente seguro de eliminar esta sede?');">
                                <i class="bi bi-trash me-2"></i>Eliminar Permanentemente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Info Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Información Importante
                    </h5>
                    <p class="card-text">Antes de eliminar esta sede, tenga en cuenta lo siguiente:</p>

                    <ul class="list-group list-group-flush bg-transparent mb-3">
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-dash-circle text-danger me-2"></i>
                            <span>Se eliminarán todos los registros asociados</span>
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-dash-circle text-danger me-2"></i>
                            <span>Esta acción no se puede deshacer</span>
                        </li>
                        <li class="list-group-item bg-transparent border-0 ps-0">
                            <i class="bi bi-dash-circle text-danger me-2"></i>
                            <span>Los informes históricos se verán afectados</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>