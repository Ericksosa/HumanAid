@model HumanAid.Models.Sede

@{
    ViewData["Title"] = "Edit";
}

<div class="container mb-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Editar Sede</h1>
            <p class="text-muted">Modifique la información de la sede</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Form Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Modificar Información de la Sede #@Model.SedeId
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="SedeId" />

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-medium">
                                <i class="bi bi-building me-2"></i>Nombre de la Sede
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre de la sede" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Ciudad" class="form-label fw-medium">
                                <i class="bi bi-geo-alt me-2"></i>Ciudad
                            </label>
                            <input asp-for="Ciudad" class="form-control form-control-lg" placeholder="Ciudad" />
                            <span asp-validation-for="Ciudad" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Direccion" class="form-label fw-medium">
                                <i class="bi bi-map me-2"></i>Dirección
                            </label>
                            <input asp-for="Direccion" class="form-control form-control-lg" placeholder="Dirección" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Director" class="form-label fw-medium">
                                <i class="bi bi-person me-2"></i>Director
                            </label>
                            <input asp-for="Director" class="form-control form-control-lg" placeholder="Director" />
                            <span asp-validation-for="Director" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FechaFundacion" class="form-label fw-medium">
                                <i class="bi bi-calendar me-2"></i>Fecha de Fundación
                            </label>
                            <input asp-for="FechaFundacion" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="FechaFundacion" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.SedeId" class="btn btn-outline-primary me-2">
                                    <i class="bi bi-info-circle me-2"></i>Ver Detalles
                                </a>
                                <button type="submit" class="btn btn-warning btn-lg px-4">
                                    <i class="bi bi-save me-2"></i>Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Estado de la Sede
                    </h5>
                    <p class="card-text">Está editando la información de una sede existente. Los cambios se aplicarán una vez guardados.</p>

                    <div class="d-flex align-items-center mb-3 mt-4">
                        <div class="bg-success rounded-circle p-2 me-3">
                            <i class="bi bi-calendar-check text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Fecha de registro</div>
                            <div class="fw-medium">@Model.FechaFundacion.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary rounded-circle p-2 me-3">
                            <i class="bi bi-person text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Registrado por</div>
                            <div class="fw-medium">Administrador</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="bg-warning rounded-circle p-2 me-3">
                            <i class="bi bi-clock-history text-white"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Última modificación</div>
                            <div class="fw-medium">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}