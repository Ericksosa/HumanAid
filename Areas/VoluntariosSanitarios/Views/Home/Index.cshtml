@{
    ViewData["Title"] = "Home - Voluntarios Sanitarios";
}

<!-- Header Section -->
<div class="bg-primary bg-gradient text-white p-4 rounded mb-4">
    <div class="container-fluid">
        <h1 class="display-5 fw-bold">Bienvenido/a, @Model.Voluntario.Nombre</h1>
        <p class="lead">Bienvenido al área de voluntarios sanitarios de HumanAid.</p>
    </div>
</div>

<div class="container-fluid mb-4">
    <!-- Status Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card h-100 border-primary">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-person-badge me-2"></i>Mi Perfil
                </div>
                <div class="card-body">
                    <h5 class="card-title">Estado: <span class="badge bg-success">Activo</span></h5>
                    <p class="card-text">Especialidad: @Model.Profesion</p>
                    <div class="row text-center">
                        <div class="col-6">
                            <h3>12</h3>
                            <p class="text-muted">Misiones</p>
                        </div>
                        <div class="col-6">
                            <h3>120</h3>
                            <p class="text-muted">Horas</p>
                        </div>
                    </div>
                    <a href="#" class="btn btn-outline-primary mt-2">Ver perfil completo</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-success">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-calendar-event me-2"></i>Próxima Misión
                </div>
                <div class="card-body">
                    <h5 class="card-title">Campaña de Vacunación</h5>
                    <p class="card-text">Comunidad Gazcue</p>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="bi bi-calendar3 me-2"></i>Fecha:</span>
                            <span>15 de octubre, 2025</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span><i class="bi bi-clock me-2"></i>Horario:</span>
                            <span>08:00 - 14:00</span>
                        </li>
                    </ul>
                    <a href="#" class="btn btn-success">Ver detalles</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-info">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-bell me-2"></i>Notificaciones
                </div>
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            Actualice sus datos antes del 30 de octubre
                        </div>
                    </div>
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <div>
                            Nueva formación disponible: Protocolos Influenza
                        </div>
                    </div>
                    <a href="#" class="btn btn-outline-info mt-2">Ver todas</a>
                </div>
            </div>
        </div>
    </div>

    <!-- News Section -->
    <h4 class="mb-3">Noticias y Anuncios</h4>
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://th.bing.com/th/id/R.cfbb9fb9f2403d9a25cbb058bdc88e7d?rik=cHKt5es%2bkxqbGQ&pid=ImgRaw&r=0" width="300px" height="300px" class="img-fluid rounded-start" alt="Noticia">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Nueva campaña de vacunación</h5>
                            <p class="card-text">Se ha lanzado una nueva campaña de vacunación contra la influenza en comunidades rurales.</p>
                            <p class="card-text"><small class="text-muted">Publicado hace 3 días</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://frasesparatodo.net/wp-content/uploads/2024/01/premio-y-reconocimiento.jpg" width="150px" height="150px" class="img-fluid rounded-start" alt="Noticia">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Reconocimiento a voluntarios</h5>
                            <p class="card-text">El próximo mes se realizará la ceremonia anual de reconocimiento a voluntarios destacados.</p>
                            <p class="card-text"><small class="text-muted">Publicado hace 5 días</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
